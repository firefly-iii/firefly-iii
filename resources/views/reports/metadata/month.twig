{% extends './layout/default' %}

{% block breadcrumbs %}
    {{ Breadcrumbs.render(Route.getCurrentRoute.getName, accountIds, start, end) }}
{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-lg-12">
            <div class="box box-info">
                <div class="box-header with-border">
                    <h3 class="box-title"><i class="fa fa-tags"></i> Metadata Report: Categories & Tags</h3>
                    <div class="box-tools pull-right">
                        <span class="label label-info">Generated: {{ 'now'|date('d M Y H:i') }}</span>
                    </div>
                </div>
                <div class="box-body">
                    <p class="lead">Complete overview of your organizational structure - all categories and tags.</p>
                    <p><strong>Categories:</strong> {{ categories|length }} | <strong>Tags:</strong> {{ tags|length }}</p>
                </div>
            </div>
        </div>
    </div>

    {# Side-by-side tables like the Python script output #}
    <div class="row">
        {# Categories Column #}
        <div class="col-lg-6 col-md-6 col-sm-12">
            <div class="box">
                <div class="box-header with-border">
                    <h3 class="box-title"><i class="fa fa-folder"></i> Categories</h3>
                </div>
                <div class="box-body table-responsive no-padding">
                    <table class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th style="width: 80px;">ID</th>
                                <th>Name</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% if categories|length > 0 %}
                                {% for category in categories %}
                                    <tr>
                                        <td>{{ category.id }}</td>
                                        <td>{{ category.name }}</td>
                                    </tr>
                                {% endfor %}
                            {% else %}
                                <tr>
                                    <td colspan="2" class="text-center text-muted">
                                        <em>No categories found</em>
                                    </td>
                                </tr>
                            {% endif %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        {# Tags Column #}
        <div class="col-lg-6 col-md-6 col-sm-12">
            <div class="box">
                <div class="box-header with-border">
                    <h3 class="box-title"><i class="fa fa-tag"></i> Tags</h3>
                </div>
                <div class="box-body table-responsive no-padding">
                    <table class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th style="width: 80px;">ID</th>
                                <th>Name</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% if tags|length > 0 %}
                                {% for tag in tags %}
                                    <tr>
                                        <td>{{ tag.id }}</td>
                                        <td>
                                            <span class="label label-primary">{{ tag.tag }}</span>
                                        </td>
                                    </tr>
                                {% endfor %}
                            {% else %}
                                <tr>
                                    <td colspan="2" class="text-center text-muted">
                                        <em>No tags found</em>
                                    </td>
                                </tr>
                            {% endif %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    {# Optional: AI Semantic Clustering Section #}
    <div class="row">
        <div class="col-lg-12">
            <div class="box box-warning">
                <div class="box-header with-border">
                    <h3 class="box-title"><i class="fa fa-magic"></i> Semantic Clustering (Optional)</h3>
                </div>
                <div class="box-body">
                    <p><em>AI-powered semantic clustering can be enabled to group related tags by meaning.</em></p>
                    <p>This feature groups similar tags (e.g., "Car Fuel", "Taxi", "Train Tickets" â†’ Transport cluster) using machine learning.</p>
                </div>
            </div>
        </div>
    </div>

{% endblock %}

{% block styles %}
    <style nonce="{{ JS_NONCE }}">
        .table-striped tbody tr:nth-of-type(odd) {
            background-color: #f9f9f9;
        }
    </style>
{% endblock %}

